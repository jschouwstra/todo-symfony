{% extends 'base.html.twig'%}
{% block content %}

<div class="row">
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="btn-group" role="group">
            <a class="btn btn-primary" href="{{ path('task_create') }}" ><i class="fa fa-plus"></i> New Task</a>
        </div>
    </div>
</div>
    <div class="col-md-4 col-md-offset-4">
        <table class="table table-bordered">
            <tr>
                <td>Task</td>
                <td>Operations</td>
            </tr>
            {% for task in tasks %}
            <tr>
                <td>{{ task.name }}</td>
                <td><a class="btn btn-primary"><i class="fa fa-pencil"></i> Edit</a></td>
            </tr>
            {% endfor %}
            <tr>
                <td></td>
            </tr>
        </table>
    </div>

</div>
{% endblock content %}
